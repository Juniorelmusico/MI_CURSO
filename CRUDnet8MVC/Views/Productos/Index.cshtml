@model IEnumerable<CRUDnet8MVC.Models.Producto>
@{
    ViewData["Title"] = "Lista de productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de productos</h3>
    </div>
     <div class="col-3">
         <a asp-action="Crear" class="btn btn-primary form-control">Crear producto</a>
    </div>    
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a => a.Id)</th>
                <th>@Html.DisplayNameFor(a => a.Nombre)</th>
                <th>@Html.DisplayNameFor(a => a.Descripcion)</th>
                <th>@Html.DisplayNameFor(a => a.Precio)</th>
                <th></th>
            </tr>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@producto.Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@producto.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay productos</p>
    }
</div>